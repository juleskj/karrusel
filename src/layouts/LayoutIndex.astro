---
const { title } = Astro.props;
import IndexHeader from "../componets/IndexHeader.astro";
import Footer from "../componets/Footer.astro";
import Countdown from "../componets/Countdown.astro";
const {
  hero_img,
  hero_tekst,
  hero_tekst_green,
  hero_img_mobil,
  hasImg = false,
  hasImgMobil = false,
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/img_karrusel/karrusel_logo_hvid.svg"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="/general.css" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Hind+Madurai:wght@300;400;500;600;700&family=Jost:ital,wght@0,100..900;1,100..900&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <IndexHeader />
    <div class="billede_med_tekst">
      {
        hasImg && (
          <>
            <img src={hero_img} alt="Hero image" class="hero_img" />
          </>
        )
      }

      {
        hasImgMobil && (
          <>
            <img
              src={hero_img_mobil}
              alt="Hero image mobil"
              class="hero_img_mobil"
            />
          </>
        )
      }

      <h3 class="hero_tekst">{hero_tekst}</h3>
      <h2 class="header_green">{hero_tekst_green}</h2>
      <Countdown />
    </div>
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  body {
    background-color: var(--backgroundcolor);
  }

  main {
    min-height: 100vh;
    background-image: url("/img_karrusel/volunteer_index.png");
    background-position: bottom;
    background-size: contain;
    background-repeat: no-repeat;
  }

  /* Billede med tekst */
  .billede_med_tekst {
    display: grid;
    place-items: center;
    position: relative;
  }
  .hero_img,
  .hero_img_mobil {
    width: 100%;
    height: auto;
    display: block;
    object-fit: cover;
    min-width: 100%;
    margin-top: -200px;
  }
  .hero_img {
    display: none;
  }

  .hero_tekst {
    position: absolute;
    top: 5%;
    margin-bottom: 20px;
    padding: 0px 20px 10px 20px;
    text-align: center;
    z-index: 1;
    color: #fff;
    font-size: 22px;
  }

  .header_green {
    position: absolute;
    top: 52%;
    left: 54%;
  }

  @media (min-width: 800px) {
    .hero_tekst {
      top: 15%;
    }

    .hero_img_mobil {
      display: none;
    }
    .hero_img {
      display: block;
    }
  }
</style>
