  .principles_luft {
    padding-top: 50px;
  }

  h2 {
    padding-bottom: 20px;
  }

  article {
    background-color: var(--lillatekstcard);
    padding: 30px;
    border-radius: 10px;
  }

  section {
    display: grid;
    gap: 20px;
  }

  .article_grid {
    display: grid;
    gap: 20px;
    padding-top: 100px;
  }

    /******************** Forms *********************/
  .forms_h2 {
    padding-top: 100px;
  }

  form {
    padding-bottom: 50px;
  }
  input {
    box-sizing: border-box;
    padding: 5px;
    margin: 0 10px 10px 0;
    width: 100%;
  }
  textarea {
    box-sizing: border-box;
    padding: 5px;
    margin: 0 10px 10px 0;
    width: 100%;
    height: 150px;
  }

  input[id="Name"] {
    border-radius: 10px 10px 0 0;
  }

  textarea[id="message"] {
    border-radius: 0 0 10px 10px;
  }

  label {
    display: none;
  }
  @media (min-width: 800px) {
    .main_luft {
      padding: 0;
    }

    section {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 20px;
    }

    .article_grid {
      display: grid;
      grid-template-columns: 1fr 1fr 1fr;
      gap: 20px;
      padding-top: 100px;
    }

    .bar_grid {
      grid-column: 1/3;
    }

    .stage_grid {
      grid-row: 2/3;
      grid-column: 2/4;
    }

    /******************** Forms *********************/
    .form {
      padding-bottom: 0;

      margin: 20px 50px 20px 50px;
    }
    form {
      padding-bottom: 0;
    }
    input {
      height: 40px;
    }
    textarea {
      height: 150px;
    }

    .forms_grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
    }

    input[id="Name"] {
      border-radius: 10px 0 0 0;
    }

    input[id="phone"] {
      border-radius: 0 10px 0 0;
    }

    textarea[id="message"] {
      border-radius: 0 0 10px 10px;
    }
  }
