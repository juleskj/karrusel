      name="Email"
      required
      placeholder="Email:"
    /><br />
    <textarea name="comment" form="usrform">Enter text here...</textarea>
    <input type="text" placeholder="Message:">-->
        <div class="forms_grid">
          <label for="Name">Name:</label>
          <input
            type="text"
            id="Name"
            name="Name"
            required
            placeholder="Name:"
          />
          <label for="phone">Tlf:</label>
          <input
            type="tel"
            id="phone"
            name="phone"
            required
            placeholder="Tlf:"
          />
        </div>
        <label for="Email">Email:</label>
        <input
          type="email"
          id="Email"
          name="Email"
          required
          placeholder="Email:"
        />
        <textarea
          id="message"
          name="message"
          form="usrform"
          placeholder="Message:"></textarea>

        <Buttons variant="primary" size="size">Send </Buttons>
      </form>
    </div>
  </div>
</MainLayout>

