---
import Buttons from "./Buttons.astro";
---

<footer>
  <img src="/img_karrusel/karrusel_logo_sort.svg" alt="karrusel logo" />
  <div class="form">
    <h3 class="h3">Hold yourself updated with a newsletter!</h3>

    <form>
      <label for="Email"></label>
      <input
        type="text"
        id="Email"
        name="Email"
        required
        placeholder="Email:"
      /><br />
      <label for="telNo"></label>
      <input type="tel" id="phone" name="phone" required placeholder="Tlf:" />
      <Buttons variant="primary" size="size">Send </Buttons>
    </form>
  </div>
  <div class="contact">
    <h3>Contact</h3>
    <p>
      Email: <a class="a_lilla" href="https://www.nusnus.dk/contact/"
        >info@nusnus.dk</a
      >
    </p>
    <br />
    <p>
      Karrusel is organized by <a class="a_lilla" href="https://www.nusnus.dk/"
        >NusNus</a
      >
    </p>
  </div>
</footer>

<style>
  footer {
    background-color: var(--offWhite);
    display: flex;
    flex-direction: column;
    padding: 50px 50px;
    margin-top: auto;
    align-items: center;
  }

  img {
    width: 45%;
    margin-bottom: 50px;
  }
  .h3 {
    text-align: center;
  }
  form {
    padding-bottom: 50px;
  }
  input {
    box-sizing: border-box;
    padding: 5px;
    margin: 5px;
    width: 100%;
  }

  input[id="Email"] {
    border-radius: 10px 10px 0 0;
  }

  input[id="phone"] {
    border-radius: 0 0 10px 10px;
  }

  label {
    display: none;
  }

  @media (min-width: 800px) {
    footer {
      background-color: var(--offWhite);
      display: flex;
      flex-direction: row-reverse;
      align-items: start;
      justify-content: center;
      padding: 0;
      margin: 0;
      padding: 0 50px 0 50px;
      bottom: 0;
    }

    .form {
      padding-bottom: 0;

      margin: 0px 50px 0px 50px;
    }
    form {
      padding-bottom: 50px;
    }
    input {
      height: 40px;
    }
    img {
      width: 12%;
      margin-bottom: 0;
      padding-bottom: 50px;
      padding-top: 50px;
    }

    .h3 {
      padding-top: 50px;
    }

    .contact {
      padding-bottom: 50px;
      padding-top: 50px;
    }
  }
</style>
