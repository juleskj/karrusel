---
const { data } = Astro.props;
---

<article>
  <img
    class="card-image overlay"
    src={"/img_karrusel/" + data.image}
    alt={"image of " + data.artistName}
  />
  <div class="card-gradient-overlay"></div>
  <h3>{data.artistName}</h3>
  <h4>{data.dato}</h4>
  <p>Country: {data.country}</p>
  {
    data.sportifyLink && (
      <span>
        {" "}
        <a class="a" href={data.sportifyLink} />
      </span>
    )
  }
  <a class="a" href={`/artists/${data.slug}`}>Learn more</a>
</article>

<style>
  article {
    position: relative;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    background-color: var(--lillacard);
    gap: 15px;
    border-radius: 10px;
  }

  img {
    width: 100%;
    height: 100%;
    grid-row: 1/3;
    grid-column: 1/4;
    object-fit: contain;
    border-radius: 10px;
  }

  h3 {
    grid-row: 2/3;
    grid-column: 1/4;
    align-self: end;
    padding: 0 0 10px 20px;
    z-index: 1;
  }

  h4 {
    grid-column: span 3;
    padding-left: 20px;
  }

  p {
    grid-column: span 2;
    padding-left: 20px;
  }

  a {
    grid-column: span 2;
    padding: 20px;
  }

  span {
    display: border-box;
    width: 50px;
    height: 50px;
    background-size: contain;
    background-repeat: no-repeat;
    background-image: url(/public/img_karrusel/sportify_hvid.svg);
  }

  .card-image {
    position: relative;
    z-index: 1;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
